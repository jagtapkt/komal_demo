doctype html
html(lang="en")
    head
        title #{title}
        link(rel='stylesheet' href='/css/mystyle.css')
    body
        a(href='/') Home
        h1 Update Employee Details
        form(method="POST" action="/update")
            table
                tr
                    td
                        label Employee id: 
                    td
                        input(name="empid" type="text" value='#{empob.empid}' disabled="disabled")
                        input(name="empid" type="hidden" value='#{empob.empid}')
                tr
                    td
                        label Name: 
                    td
                        input(name="ename" type="text" value="#{empob.ename}")
                tr
                    td
                        label Salary: 
                    td
                        input(name="sal" type="text" value="#{empob.sal}")
                tr
                    td(colspan="2" align="center")
                        input(type="submit" value="Update Employee")
